#include<stdio.h>

void main(){
	float lado1;
	float lado2;
	float perimetro;
	float area;
	
	printf("Ingrese el largo del 1° lado del rectangulo ");
	scanf("%f",&lado1);
	printf("Ingrese el largo del 2° lado del rectangulo ");
	scanf("%f",&lado2);
	
	perimetro=lado1*2+lado2*2;
	area=lado1*lado2;	
	
	printf("El perimetro es de %f y el area es de %f",perimetro,area);
}
